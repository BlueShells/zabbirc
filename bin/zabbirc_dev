#!/usr/bin/env ruby
require 'pry'

$base_dir = Pathname.new(
    File.expand_path(
        Pathname.new(File.dirname(__FILE__)).join("..")
    )
)
# Rewrites runtime directory in development mode
module Zabbirc
  RUNTIME_DATA_DIR = $base_dir.join("tmp")
end

require 'zabbirc'
require_relative '../config/config'

s = Zabbirc::Service.new

trap "SIGINT" do
  s.stop
end

if ARGV[0] != "n"
  s.start false
end

binding.pry